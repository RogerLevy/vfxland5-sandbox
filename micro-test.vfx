c: %rando %origin startx starty ;
0 %rando :construct micro:construct x 2@ startx 2! ;

: *rando
    %rando add {{
        \ 0 ICON_SPACING at
        <del> [: me unload ;] *kpress {{ }}
        <enter> [: startx 2@ x 2! ;] *kpress {{ }}   \ couples this to a rando
        \ %gravity add { }
        %move add {{ 
            %rep add {{
                [: 1.0 val ! 360. rnd ang ! ;] xt !
                %ability add {{
                    <enter> k !
                    [: 0. val ! ;] kp !
                    [: 1. val ! dur @ t ! ;] kr !
                }}
            }}
            %ability add {{
                <enter> k !
                [: 1. val ! ;] kh !
            }}
        }}
        %micro add {{
            %micro add {{ }}
        }}
    me }} ;

: *sprite ( bmp - sprite )
