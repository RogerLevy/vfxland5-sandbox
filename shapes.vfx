\ %circle :: draw  at-me r @ fil @ if circf else circ then ;
\ %oval :: draw  at-me rx 2@ fil @ if ovalf else oval then ;
\ %line :: draw  at-me dx 2@ line ;
\ %rect :: draw  at-me w 2@ fil @ if rectf else rect then ;
