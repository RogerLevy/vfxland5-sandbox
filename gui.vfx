\ -- Textual Trait -------------------------------------------------------------

trait: %textual
    prop txt :addr  \ lstring
    prop fnt :addr 
    prop w :fixed
    prop h :fixed
    prop tx :fixed  \ text offset
    prop ty :fixed

    :: text! ( a n - ) 
        txt @ free drop \ ignore ior
        0 txt !
        dup cell+ allocate throw txt !
        txt @ lplace
        fnt @ fnt!  txt @ lcount textbox 2>p w 2! 2>p tx 2! ;
trait;

\ -- Label ---------------------------------------------------------------------

class: %label
    %ui-box derive
    is-a %textual
    prop clr
    template { fnt@ fnt ! $FFFFFFFF clr ! }

    :: _draw  txt @ ?dup -exit lcount clr @ rgba8 print ;
class;

: *label ( zstr - label )
    %label add { zcount me text! me } ;

